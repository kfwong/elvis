<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<VBox prefHeight="250.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.131" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox prefHeight="29.0" prefWidth="156.0">
            <children>
                <Label prefHeight="17.0" prefWidth="70" text="Directory: " />
                <TextField fx:id="directoryPath" prefHeight="27.0" prefWidth="250.0" />
                <Label fx:id="directoryPathError" prefHeight="17.0" prefWidth="120.0">
                    <padding>
                        <Insets left="10" top="10"></Insets>
                    </padding>
                </Label>
            </children>
            <VBox.margin>
                <Insets left="20.0" top="10.0"/>
            </VBox.margin>
        </HBox>
        <Button fx:id="directorySubmit" mnemonicParsing="false" text="Change">
            <VBox.margin>
                <Insets left="20.0" top="10.0"/>
            </VBox.margin>
        </Button>
    </children>
</VBox>

